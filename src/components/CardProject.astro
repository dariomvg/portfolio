---
import "../styles/card-project.css";
import type { ProjectsTypes } from "../types/utils.types";

interface Props {
    item: ProjectsTypes
}
const {item} = Astro.props;
const {icons, title, date, description, repo} = item; 
---

<a href={repo} target={`${repo ? "_blank" : "_self"}`} rel="noreferrer" class="card-project">
    <div  class="container-details-card">
        <div class="header-card">
            <div class="header-card-title">
                <h3 class="title-card">{title}</h3>
                <div class="icons-card">
                    {icons.map((icon) => <img src={icon.src} alt="logo skill" width="25" height="25" class="logo-card" loading="lazy" />)}
                </div> 
            </div>
            <strong class="date-card">{date}</strong>
        </div>
    <p class="description-card">{description}</p>
</div>
</a>
